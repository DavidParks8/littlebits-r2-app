<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Note: For Android please see also Platforms\Android\Resources\values\colors.xml -->

    <!-- R2D2-inspired palette: blue/silver/white -->
    <Color x:Key="Primary">#1565C0</Color>
    <Color x:Key="PrimaryDark">#64B5F6</Color>
    <Color x:Key="PrimaryDarkText">#E3F2FD</Color>
    <Color x:Key="Secondary">#B0BEC5</Color>
    <Color x:Key="SecondaryDarkText">#90A4AE</Color>
    <Color x:Key="Tertiary">#0D47A1</Color>

    <Color x:Key="White">White</Color>
    <Color x:Key="Black">Black</Color>
    <Color x:Key="Magenta">#D600AA</Color>
    <Color x:Key="MidnightBlue">#0D253F</Color>
    <Color x:Key="OffBlack">#121B28</Color>

    <!-- Semantic colors -->
    <Color x:Key="Danger">#D32F2F</Color>
    <Color x:Key="DangerDark">#EF5350</Color>
    <Color x:Key="Success">#2E7D32</Color>
    <Color x:Key="SuccessDark">#66BB6A</Color>
    <Color x:Key="Surface">#1A2332</Color>
    <Color x:Key="SurfaceLight">#F5F7FA</Color>
    <Color x:Key="CardDark">#1E2D3D</Color>
    <Color x:Key="CardLight">#FFFFFF</Color>

    <Color x:Key="Gray100">#E8EDF2</Color>
    <Color x:Key="Gray200">#CFD8DC</Color>
    <Color x:Key="Gray300">#B0BEC5</Color>
    <Color x:Key="Gray400">#90A4AE</Color>
    <Color x:Key="Gray500">#78909C</Color>
    <Color x:Key="Gray600">#546E7A</Color>
    <Color x:Key="Gray900">#263238</Color>
    <Color x:Key="Gray950">#1A2327</Color>

    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource Primary}"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource Secondary}"/>
    <SolidColorBrush x:Key="TertiaryBrush" Color="{StaticResource Tertiary}"/>
    <SolidColorBrush x:Key="WhiteBrush" Color="{StaticResource White}"/>
    <SolidColorBrush x:Key="BlackBrush" Color="{StaticResource Black}"/>

    <SolidColorBrush x:Key="Gray100Brush" Color="{StaticResource Gray100}"/>
    <SolidColorBrush x:Key="Gray200Brush" Color="{StaticResource Gray200}"/>
    <SolidColorBrush x:Key="Gray300Brush" Color="{StaticResource Gray300}"/>
    <SolidColorBrush x:Key="Gray400Brush" Color="{StaticResource Gray400}"/>
    <SolidColorBrush x:Key="Gray500Brush" Color="{StaticResource Gray500}"/>
    <SolidColorBrush x:Key="Gray600Brush" Color="{StaticResource Gray600}"/>
    <SolidColorBrush x:Key="Gray900Brush" Color="{StaticResource Gray900}"/>
    <SolidColorBrush x:Key="Gray950Brush" Color="{StaticResource Gray950}"/>
</ResourceDictionary>